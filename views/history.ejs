<!-- views/history.ejs -->
<% include ./layout %>

<div class="container mt-4">
    <h2>Medication History</h2>

    <!-- Display medication history -->
    <% history.forEach(entry => { %>
        <div class="card mb-2">
            <div class="card-body">
                <p class="mb-1"><strong>Time:</strong> <%= entry.time %></p>
                <p class="mb-1"><strong>Dosage:</strong> <%= entry.dosage %></p>
                <p class="mb-1"><strong>Medicine:</strong> <%= entry.medicine %></p>
            </div>
        </div>
    <% }); %>

    <!-- Display Firestore history -->
    <% firestoreData.forEach(entry => { %>
        <div class="card mb-2">
            <div class="card-body">
                <p class="mb-1"><strong>Date:</strong> <%= entry.date %></p>
                <p class="mb-1"><strong>Event:</strong> <%= entry.event %></p>
            </div>
        </div>
    <% }); %>
</div>
